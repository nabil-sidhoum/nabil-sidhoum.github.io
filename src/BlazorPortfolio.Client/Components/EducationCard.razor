@using BlazorPortfolio.Client.Models
@code {
    [Parameter]
    public Education Education { get; set; } = new();
}

<div class="card">
    <div class="header">
        <div class="logo">
            <img src="@Education.Logo" alt="Logo">
        </div>
        <div class="title">
            <h3>@Education.School</h3>
            <p>@Education.Diploma</p>
            <p>@Education.Domain</p>
            <span class="badge">
                @Education.StartDate.ToString("MMMM yyyy") - @(Education.EndDate?.ToString("MMMM yyyy") ?? "Aujourd’hui")
            </span>
        </div>
    </div>
    <div class="content">
        <ul>
            @foreach (var description in Education.Descriptions)
            {
                <li>@description</li>
            }
        </ul>
    </div>
</div>
<br />

